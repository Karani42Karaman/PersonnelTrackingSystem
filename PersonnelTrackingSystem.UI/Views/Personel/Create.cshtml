@model PersonnelTrackingSystem.Entities.DTOs.PersonelDto



<style>
    .center-page {
        margin-top:auto; 
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-wrapper {
        width: 100%;
        max-width: 500px;
    }
</style>

<div class="center-page">
    <div class="form-wrapper">

        <h2 class="text-center">Yeni Personel</h2>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(x => x.Ad)
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Soyad)
                @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.DogumTarihi)
                @Html.TextBoxFor(x => x.DogumTarihi, "{0:yyyy-MM-dd}",
                    new { @class = "form-control", type = "date" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Sehir)
                @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Adres)
                @Html.TextAreaFor(x => x.Adres, new { @class = "form-control", rows = 3 })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">Kaydet</button>
                @Html.ActionLink("Geri", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>
