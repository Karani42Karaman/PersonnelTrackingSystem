

@model PersonelDto
@using PersonnelTrackingSystem.Entities.DTOs

<style>
    .center-page {
        margin-top: auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-wrapper {
        width: 100%;
        max-width: 500px;
    }
</style>

<div class="center-page">
    <div class="form-wrapper">

        <h2 class="text-center"> Personel Düzenle</h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                @Html.LabelFor(x => x.Ad)
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Soyad)
                @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.DogumTarihi)
                @Html.TextBoxFor(x => x.DogumTarihi, "{0:yyyy-MM-dd}",
                    new { @class = "form-control", type = "date" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Sehir)
                @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Adres)
                @Html.TextAreaFor(x => x.Adres, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Güncelle</button>
            @Html.ActionLink("Geri", "Index", null, new { @class = "btn btn-secondary" })
        }

        </div>
    </div>
